version: '3'

services:
  mysql:
    image: mysql:latest
    container_name: mysql_final
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: {{ mysql_root_password }}
      MYSQL_DATABASE: {{ mysql_db_name }}
    ports:
      - '3308:3306'
    volumes:
      - mysql-data:/var/lib/mysql
    networks:
      mysql-network:
        aliases:
          - {{ mysql_alias }}

  app:
    build: .
    container_name: python_final
    depends_on:
      - mysql
    restart: always
    ports:
      - '{{ app_port }}:{{ app_port }}'
    networks:
      - mysql-network

networks:
  mysql-network:
    driver: bridge
volumes:
  mysql-data:
    driver: local
